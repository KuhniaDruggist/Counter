{
    "parser" : "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "lodash"
    ],
    "extends": [
        "plugin:react/recommended"
    ],
    "rules"  : {
        "comma-dangle"                      : [
            1,
            {
                "arrays"   : "always-multiline",
                "objects"  : "always-multiline",
                "imports"  : "always-multiline",
                "exports"  : "always-multiline",
                "functions": "never"
            }
        ],
        "no-cond-assign"                    : [
            2,
            "always"
        ],
        "no-constant-condition"             : 2,
        "no-control-regex"                  : 2,
        "no-debugger"                       : 2,
        "no-dupe-args"                      : 2,
        "no-dupe-keys"                      : 2,
        "no-duplicate-case"                 : 2,
        "no-empty-character-class"          : 2,
        "no-empty"                          : 2,
        "no-ex-assign"                      : 2,
        "no-extra-boolean-cast"             : 2,
        "no-extra-parens"                   : [
            2,
            "functions"
        ],
        "no-extra-semi"                     : 2,
        "no-func-assign"                    : 2,
        "no-inner-declarations"             : [
            1,
            "both"
        ],
        "no-invalid-regexp"                 : 2,
        "no-irregular-whitespace"           : 2,
        "no-negated-in-lhs"                 : 2,
        "no-obj-calls"                      : 2,
        "no-regex-spaces"                   : 2,
        "no-sparse-arrays"                  : 2,
        "no-unreachable"                    : 1,
        "use-isnan"                         : 2,
        "valid-typeof"                      : 2,
        "no-unexpected-multiline"           : 2,
        "block-scoped-var"                  : 2,
        "dot-notation"                      : 1,
        "eqeqeq"                            : 2,
        "guard-for-in"                      : 1,
        "no-alert"                          : 2,
        "no-caller"                         : 2,
        "no-div-regex"                      : 2,
        "no-else-return"                    : 2,
        "no-eq-null"                        : 2,
        "no-fallthrough"                    : 2,
        "no-floating-decimal"               : 2,
        "no-implied-eval"                   : 2,
        "no-iterator"                       : 2,
        "no-labels"                         : 2,
        "no-lone-blocks"                    : 2,
        "no-loop-func"                      : 1,
        "no-multi-str"                      : 2,
        "no-native-reassign"                : 2,
        "no-new-func"                       : 2,
        "no-new-wrappers"                   : 2,
        "no-octal-escape"                   : 2,
        "no-octal"                          : 2,
        "no-proto"                          : 2,
        "no-redeclare"                      : 2,
        "no-script-url"                     : 2,
        "no-self-compare"                   : 2,
        "no-sequences"                      : 2,
        "no-throw-literal"                  : 2,
        "no-useless-call"                   : 2,
        "no-void"                           : 2,
        "no-with"                           : 2,
        "one-var"                           : [
            "error",
            {
                "var"  : "always",
                "let"  : "never",
                "const": "never"
            }
        ],
        "radix"                             : 2,
        "vars-on-top"                       : 1,
        "yoda"                              : [
            2,
            "never",
            {
                "onlyEquality": true
            }
        ],
        "no-catch-shadow"                   : 1,
        "no-delete-var"                     : 2,
        "no-label-var"                      : 2,
        "no-shadow-restricted-names"        : 2,
        "no-undefined"                      : 1,
        "no-use-before-define"              : "off",
        "array-bracket-spacing"             : [
            1,
            "always",
            {
                "objectsInArrays": false
            }
        ],
        "brace-style"                       : [
            2,
            "1tbs",
            {
                "allowSingleLine": true
            }
        ],
        "camelcase"                         : [
            1,
            {
                "properties": "always"
            }
        ],
        "comma-spacing"                     : [
            2,
            {
                "after": true
            }
        ],
        "comma-style"                       : 2,
        "computed-property-spacing"         : [
            2,
            "never"
        ],
        "indent"                            : [
            1,
            4,
            { "ignoredNodes": [ "TemplateLiteral", "SwitchCase" ] }
        ],
        "new-cap"                           : [
            1,
            {
                "newIsCap": true,
                "capIsNew": true
            }
        ],
        "new-parens"                        : 2,
        "no-array-constructor"              : 2,
        "no-lonely-if"                      : 2,
        "no-mixed-spaces-and-tabs"          : 2,
        "no-new-object"                     : 2,
        "no-spaced-func"                    : 2,
        "no-underscore-dangle"              : [
            1,
            {
                "allowAfterThis": true
            }
        ],
        "no-unneeded-ternary"               : 2,
        "object-curly-spacing"              : [
            1,
            "always"
        ],
        "padded-blocks"                     : [
            2,
            "never"
        ],
        "quotes"                            : [
            2,
            "single",
            "avoid-escape"
        ],
        "semi-spacing"                      : [
            2,
            {
                "after": true
            }
        ],
        "semi"                              : [
            2,
            "always",
            {
                "omitLastInOneLineBlock": true
            }
        ],
        "keyword-spacing"                   : [
            2,
            {
                "before": true,
                "after" : true
            }
        ],
        "space-before-blocks"               : [
            2,
            "always"
        ],
        "space-before-function-paren"       : 2,
        "space-in-parens"                   : [
            2,
            "never",
            {}
        ],
        "space-infix-ops"                   : 2,
        "space-unary-ops"                   : [
            2,
            {
                "words": true
            }
        ],
        "spaced-comment"                    : [
            1,
            "always"
        ],
        "arrow-parens"                      : [
            2,
            "as-needed"
        ],
        "arrow-spacing"                     : [
            2,
            {
                "before": true,
                "after" : true
            }
        ],
        "constructor-super"                 : 2,
        "generator-star-spacing"            : [
            2,
            "both"
        ],
        "no-class-assign"                   : 2,
        "no-const-assign"                   : 2,
        "no-this-before-super"              : 2,
        "object-shorthand"                  : [
            2,
            "properties"
        ],
        "padding-line-between-statements"   : [
            1,
            {
                "blankLine": "any",
                "prev"     : "import",
                "next"     : "import"
            },
            {
                "blankLine": "never",
                "prev"     : "const",
                "next"     : "const"
            },
            {
                "blankLine": "never",
                "prev"     : "let",
                "next"     : "let"
            },
            {
                "blankLine": "never",
                "prev"     : "var",
                "next"     : "var"
            },
            {
                "blankLine": "any",
                "prev"     : "const",
                "next"     : "multiline-const"
            },
            {
                "blankLine": "any",
                "prev"     : "multiline-const",
                "next"     : "const"
            }
        ],
        "prefer-const"                      : 1,
        "prefer-spread"                     : 2,
        "require-yield"                     : 2,
        "max-depth"                         : [
            1,
            4
        ],
        "eol-last"                          : [
            2,
            "always"
        ],
        "no-useless-constructor"            : 0,
        "prefer-rest-params"                : 1,
        "implicit-arrow-linebreak"          : 1,
        "no-dupe-class-members"             : 1,
        "no-duplicate-imports"              : 1,
        "no-trailing-spaces"                : 1,
        "no-multiple-empty-lines"           : 1,
        "react/jsx-key"                     : 1,
        "react/jsx-no-comment-textnodes"    : 1,
        "react/jsx-no-duplicate-props"      : 1,
        "react/jsx-no-target-blank"         : 1,
        "react/jsx-no-undef"                : 1,
        "react/jsx-uses-react"              : 1,
        "react/jsx-uses-vars"               : 1,
        "react/no-children-prop"            : 0,
        "react/no-danger-with-children"     : 0,
        "react/no-deprecated"               : 1,
        "react/no-direct-mutation-state"    : 1,
        "react/no-find-dom-node"            : 1,
        "react/no-is-mounted"               : 1,
        "react/no-string-refs"              : 1,
        "react/no-unescaped-entities"       : 1,
        "react/no-unknown-property"         : 1,
        "react/prop-types"                  : 0,
        "react/react-in-jsx-scope"          : 1,
        "react/require-render-return"       : 1,
        "react/jsx-wrap-multilines"         : [ 1, {
            "arrow"      : "parens-new-line",
            "declaration": "parens-new-line",
            "return"     : "parens-new-line",
            "prop"       : "parens-new-line",
            "condition"  : "parens-new-line"
        } ],
        "react/no-render-return-value"      : 0,
        "react/jsx-equals-spacing"          : [ 1, "never" ],
        "react/jsx-max-props-per-line"      : [ 1, { "maximum": 1 } ],
        "react/jsx-first-prop-new-line"     : [ 1, "multiline" ],
        "react/jsx-closing-bracket-location": [ 1, "tag-aligned" ],
        "react/jsx-curly-spacing"           : [ 1, { "when": "always", "children": true } ],
        "@typescript-eslint/type-annotation-spacing": 1,
        "@typescript-eslint/member-delimiter-style": [ 1, {
            "multiline": {
                "delimiter": "none"
            },
            "overrides": {
                "interface": {
                    "multiline": {
                        "delimiter": "semi",
                        "requireLast": true
                    }
                }
            }
        } ],
        "@typescript-eslint/no-unused-vars": 1,
        "lodash/import-scope":  [ 2, "method" ]
    }
}
